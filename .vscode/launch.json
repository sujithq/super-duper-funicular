            "args": ["weather", "--analysis", "overview"],
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Debug SolarScope - Custom Args",
            "type": "coreclr",
