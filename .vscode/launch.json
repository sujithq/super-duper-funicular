{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SolarScope - Dashboard",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/bin/Debug/net9.0/SolarScope.dll",
            "args": ["dashboard"],
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Debug SolarScope - Dashboard (Animated)",
            "type": "coreclr",
            "request": "launch",
