            "args": ["dashboard", "--animated"],
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Debug SolarScope - Weather",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
