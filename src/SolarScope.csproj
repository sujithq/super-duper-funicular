<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>SolarScope</AssemblyName>
    <RootNamespace>SolarScope</RootNamespace>
    <PackageId>SolarScope</PackageId>
    <Version>1.0.0</Version>
    <Authors>Sujith Quintelier</Authors>
    <Description>SolarScope CLI - Your Personal Solar System Command Center</Description>
    <PackageTags>solar;cli;weather;analytics;terminal</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="Spectre.Console" Version="0.49.1" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />
    <PackageReference Include="xunit" Version="2.6.2" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.5.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="data\**" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
