<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <UseTopLevelProgram>false</UseTopLevelProgram>
    <AssemblyName>SolarScope</AssemblyName>
    <RootNamespace>SolarScope</RootNamespace>
    <PackageId>SolarScope</PackageId>
    <Version>1.0.0</Version>
    <Authors>Sujith Quintelier</Authors>
    <Description>SolarScope CLI - Your Personal Solar System Command Center</Description>
    <PackageTags>solar;cli;weather;analytics;terminal</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="Spectre.Console" Version="0.50.0" />
    <PackageReference Include="System.Text.Json" Version="9.0.7" />
    <PackageReference Include="xunit" Version="2.9.3" />
    <PackageReference Include="xunit.runner.visualstudio" Version="3.1.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Include="data\**" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
